<script>
  "use strict";
  $(function () {
    var $env = $('.env');

    window.isNight = false;

    var randomizeClouds = function () {
      $('.cloud').each(function () {
          var value = 50 + Math.floor(Math.random() * 400);
          $(this).css('top', value + "px");
        })
    };

    $(window).on('load', function () {
        $env.removeClass('hidden');

        randomizeClouds();
      });

    $('.set_alarm_btn').on('click', function () {
        if (window.isNight) {
          $('#stars_container').animate({'opacity': 0}, 1000);
          $env.removeClass('night');
        } else {
          $('#stars_container').animate({'opacity': 1}, 1000);
          $env.addClass('night')
        }

        window.isNight = !window.isNight;
      });

    $("#tune_modal").iziModal({
      title: 'Select a tune',
      subtitle: 'You can select any tune, YouTube video or upload MP3',
      headerColor: '#1a91d2',
      width: 600,
    });

    var $timeModal = $("#time_modal");
    $timeModal.iziModal({
        title: 'Select a time to wake up',
        subtitle: '',
        headerColor: '#1a91d2',
        width: 250,
        onOpening: function() {
          ([...Array(13).keys()]).forEach(function(hour) {
            hour = hour < 10 ? "0" + hour : hour;
            $timeModal.find('ul').append('<li>' + hour + ":" + '00</li>');
            $timeModal.find('ul').append('<li>' + hour + ':' + '30</li>');
          });

        }
    });

    $(document).on('click', '.wu_tune_desc', function () {
        $('#tune_modal').iziModal('open');
    });

    $(document).on('click', '.wake_up_time', function () {
        $('#time_modal').iziModal('open');
    });

  });

  $('#site_container').css('opacity', 0);
  $(window).on('load', function () {
      $('#preloader')
        .animate({'opacity': 0}, {
          complete: function () {
            $('#site_container').animate({'opacity': 1});

//             setTimeout(function () {
